{% extends "::base.html.twig" %}

{% block body %}
    <div class="container">
        <br><br>
        <h1>Liste des trains</h1>
        <br><br>
        <div class="row">
            {% if trajets is empty %}
                <div class="col-md-4">
                    <div class="card" style="width: 100%;">
                        <div class="card-header">
                         <h5>Il n'y a aucun train</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><b><u>/!\</u>     Raison grêve     <u>/!\</u></b></p>
                        </div>
                    </div>
                    <br>
                </div>
            {% else %}
                {% for trajet in trajets %}
                    <div class="col-md-4">
                        <div class="card" style="width: 100%;">
                            <div class="card-header">
                             <b>Train : </b>{{ trajet.train.name }}
                            </div>
                            <div class="card-body">
                                <h5 class="card-text">Gare de Départ : {{ trajet.gareDepart.name }}</h5>
                                <p class="card-text">Gare d'Arrivé : {{ trajet.gareArrive.name }}</p>
                                <p class="card-text">Heure de Départ : {{ trajet.heureDepart|date("d/m/y H:i") }}</p>
                                <p class="card-text">Heure d'Arrivé : {{ trajet.heureArrive|date("d/m/y H:i") }}</p>
                                <div class="text-right">
                                    <a href="/reservation/{{ trajet.id }}" class="btn btn-success ">Réserver un siège</a>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <br><br>
{% endblock body %}