{% extends "::base.html.twig" %}

{% block body %}
    <div class="container">
        <h1>Réserver un train</h1>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}
                {# Génération manuelle et éclatée : #}
                <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.depart, "Départ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.depart) }}
                    <div class="col-sm-10">
                        {# Génération de l'input. #}
                        {{ form_widget(form.depart, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                {# Idem pour un autre champ. #}
                <div class="form-group">
                    {{ form_label(form.arrive, "Arriver", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.arrive) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.arrive, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.heureDepart, "Heure de départ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.heureDepart) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.heureDepart) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.heureArrive, "Heure de arrivé", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.heureArrive) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.heureArrive) }}
                    </div>
                </div>


                {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary'} ,  'label': 'Trouver mon train' }) }}

                {{ form_rest(form) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock body %}